# Space Engineers Server Configuration Examples
# 
# This file demonstrates environment variable configuration.
# Prefix any Space Engineers config field with SE_ to override it.

# ============================================================================
# BASIC SERVER SETUP
# ============================================================================

SE_SERVER_NAME=My Space Engineers Server
SE_SERVER_DESCRIPTION=A friendly survival server. Welcome!
SE_WORLD_NAME=MyAwesomeWorld
SE_MAX_PLAYERS=8

# ============================================================================
# NETWORK SETTINGS
# ============================================================================

SE_SERVER_PORT=27016
# SE_STEAM_PORT=8766

# ============================================================================
# GAME SETTINGS
# ============================================================================

SE_GAME_MODE=Survival
# Options: Survival, Creative

SE_SCENARIO_EDIT_MODE=false
SE_IGNORE_LAST_SESSION=true

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================

SE_VIEW_DISTANCE=15000
# Lower values improve performance, higher values improve visibility

SE_PAUSE_GAME_WHEN_EMPTY=false
# Set to true to pause simulation when no players are online

SE_REMOVE_TRASH=true
# Automatically remove disconnected players' trash

# ============================================================================
# PLAYER FEATURES
# ============================================================================

SE_ENABLE_SPECTATOR=false
SE_ENABLE_INGAME_SCRIPTS=true
SE_SHOW_PLAYER_NAMES_ON_HUD=true
SE_ENABLE_КОПІРОВАНИЕ=true

# ============================================================================
# ADMIN & MODERATION
# ============================================================================

# SE_ADMINISTRATORS=76561198012345678,76561198087654321
# Comma-separated list of Steam64 IDs

# ============================================================================
# WORLD SETTINGS
# ============================================================================

# SE_WORLD_SIZE_KM=0
# 0 = unlimited

# SE_ASTEROIDS_AMOUNT=Normal
# Options: None, Normal, Large, ProceduralLow, ProceduralNormal, ProceduralHigh

# ============================================================================
# AUTO-UPDATE & MAINTENANCE
# ============================================================================

# AUTO_UPDATE_CONFIG=true
# Automatically update config when Space Engineers releases new version

# SHOW_CONFIG_OPTIONS=true
# Display all available config options on container startup

# ============================================================================
# TORCH PERFORMANCE PLUGINS (Torch server only)
# ============================================================================

# Concealment Plugin - CRITICAL for weak CPUs
# Pauses grids when no players are nearby, can improve sim speed by 50-90%
INSTALL_CONCEALMENT=true

# Concealment distance in meters (default: 8000m / 8km)
# Increase this if you use long-distance drones or automation
# Example: 15000 for 15km range
CONCEALMENT_DISTANCE=8000

# Performance Improvements Plugin - Viktor's optimization patches
# Fixes game inefficiencies, reduces GC pressure, improves sim speed
INSTALL_PERFORMANCE_IMPROVEMENTS=true

# Essentials Plugin - Admin tools and cleanup automation
# Provides grid limits, trash removal, automated cleanup
# Set to true if you want admin/moderation features
INSTALL_ESSENTIALS=false

# ============================================================================
# TORCH PLUGIN NOTES
# ============================================================================
#
# Concealment Side Effects:
#   - Long-distance autonomous drones may pause when outside player range
#   - Laser antennas between distant grids may disconnect
#   - Workaround: Increase CONCEALMENT_DISTANCE for your use case
#
# Performance Improvements Side Effects:
#   - 2-second cache delays for safe zone/ownership changes (minimal impact)
#
# All plugins are server-side only - clients connect normally with no mods
#
# ============================================================================

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Only set variables you want to override - everything else uses SE defaults
# 2. Environment variable names must be UPPERCASE with underscores
# 3. Conversion: SE_SERVER_NAME → <ServerName> in XML config
# 4. The system auto-validates against SE's current config schema
# 5. Unknown fields will be skipped with a warning
#
# ============================================================================

